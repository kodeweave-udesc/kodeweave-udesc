<div class="card mb-3 bg-light ">
  <div class="card-header h3">
    <%= icon('fas','clipboard-list', t('.title'), class: 'fa-fw h2 mb-0') %>
  </div>

  <div class="card-body">
    <div class="row">
      <% if @tasks.present? %>
        <%= render(@tasks) %>
      <% else %>
        <div class="col-12">
          <p class="text-center text-secondary"> <%= t('.empty_projects') %> </p>
        </div>
        <div class="col-12 d-flex justify-content-center">
          <%= link_to(icon('fas', 'plus', t('.new_project')), new_project_path, class: "btn btn-outline-success") %>
        </div>
      <% end %>
    </div>
  </div>
</div>
