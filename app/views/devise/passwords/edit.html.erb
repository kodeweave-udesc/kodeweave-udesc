<div class="card card-login mx-auto mt-5">
  <div class="card-header">
    <%= image_tag('logo.svg', class: "avatar-image") %>
    <span class="h4 align-middle"><%= t('.change_your_password') %></span>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |form| %>

      <%= form.hidden_field(:reset_password_token) %>

      <div class="form-group row">
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label(:password) %>
            <%= form.password_field(:password, autocomplete: "current-password", class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label(:password_confirmation) %>
            <%= form.password_field(:password_confirmation, autocomplete: "current-password", class: "form-control") %>
          </div>
        </div>
      </div>

      <%= form.submit(t('.change_my_password'), class: "btn btn-info btn-block") %>
    <% end %>
    <br />
  </div>
  <div class="card-footer clearfix small z-1">
    <%= render("devise/shared/links") %>
  </div>
</div>
