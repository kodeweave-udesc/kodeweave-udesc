<div class="card mb-3 bg-light ">
  <div class="card-header h3">
    <%= icon('fas','clipboard-list', 'Tarefas', class: 'fa-fw h2 mb-0') %>
  </div>
  <div class="card-body">
    <%= form_with(model: @task,  url: project_tasks_path(), local: true) do |form| %>
      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, autofocus: true, class: "form-control") %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:goals_end_at) %>
            <%= form.date_field(:goals_end_at, value: form.object.try(:strftime,"%m/%d/%Y"), class: "form-control") %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:goals_start_at) %>
            <%= form.date_field(:goals_start_at, value: form.object.try(:strftime,"%m/%d/%Y"), class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:obs) %>
            <%= form.text_field(:obs, class: "form-control") %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:short_detailing) %>
            <%= form.text_field(:short_detailing, class: "form-control") %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:full_detailing) %>
            <%= form.text_area(:full_detailing, class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:user_id) %>
            <%= form.select(:user_id, User.all.collect { |user| [user.name, user.id] }, {}, class: "form-control") %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <%= link_to('Voltar', :back, class: "btn btn-info") %>
        <%= form.submit class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  $( "#task_user_id" ).select2({
    theme: "bootstrap",
    language: "zh-TW"
  });
</script>
