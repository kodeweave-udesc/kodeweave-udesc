<%= form_with(model: project, local: true) do |form| %>
  <%= render("messages/errors_messages", record: project) %>

  <div class="form-group row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:name) %>
        <%= form.text_field(:name, autofocus: true, class: "form-control") %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:owner) %>
        <%= form.select(:owner, User.all.collect { |user| [user.name, user.id] }, {}, class: "form-control") %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:user_ids) %>
        <%= form.select(:user_ids, User.all.collect { |user| [user.name, user.id] },
                                                 { prompt: "Selecione os UsuÃ¡rios" },
                                                 { multiple: true, class: "form-control" }) %>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to(t('.back'), :back, class: "btn btn-primary") %>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>

<script>
  $( "#project_owner" ).select2({
    theme: "bootstrap",
    language: "zh-TW"
  });

  $( "#project_user_ids" ).select2({
    theme: "bootstrap",
    language: "zh-TW"
  });
</script>
