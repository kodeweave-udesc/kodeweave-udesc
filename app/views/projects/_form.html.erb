<%= form_with(model: project, local: true) do |form| %>
  <%= render("messages/errors_messages", record: project) %>

  <div class="form-group row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:name) %>
        <%= form.text_field(:name, autofocus: true, class: "form-control") %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label(:owner) %>
        <%= form.select(:owner, current_user.account.users.collect { |user| [user.name, user.id] }, {}, class: "form-control") %>
      </div>
    </div>
  </div>

  <div class="float-right">
    <%= link_to(t('.back'), :back, class: "btn btn-primary") %>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
