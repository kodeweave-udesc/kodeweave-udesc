<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','desktop', t('.title', project_name: @project.name), class: 'fa-fw h2 mb-0') %>
    <%= link_to(t('.delete'), @project, method: :delete, class: "btn btn-danger float-right") %>
  </div>
  <div class="card-body">
    <%= form_with(model: @project, local: true) do |form| %>
      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, disabled: true, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:owner) %>
            <%= form.select(:owner, current_user.account.users.collect { |user| [user.name, user.id] }, {}, class: "form-control", disabled: true) %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <%= link_to(t('.back'), projects_path(), class: "btn btn-primary") %>
        <%= link_to(t('.edit'), edit_project_path(@project), class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>
