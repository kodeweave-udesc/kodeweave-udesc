<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','desktop', t('.title', project_name: @project.name), class: 'fa-fw h2 mb-0') %>
      <div class="float-right">
      <%= link_to(t('.infos'), project_dashboard_path(project_id: @project), class: "btn btn-info") %>
      <%= link_to(t('.delete'), @project, method: :delete, class: "btn btn-danger") %>
    </div>
  </div>
  <div class="card-body">
    <%= form_with(model: @project, local: true) do |form| %>
      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:name) %>
            <%= form.text_field(:name, disabled: true, class: "form-control") %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:owner) %>
            <%= form.select(:owner, [@project.owner.name], {}, class: "form-control", disabled: true) %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4">
          <div class="form-group">
            <%= form.label(:user_ids) %>
            <%= form.select(:user_ids, User.all.collect { |user| [user.name, user.id] },
                                                    { prompt: "Selecione os Usuários" },
                                                    { multiple: true, class: "form-control", disabled: true }) %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <%= link_to(t('.back'), projects_path(), class: "btn btn-primary") %>
        <%= link_to(t('.schedule'), project_schedule_path(project_id: @project), class: "btn btn-warning") %>
        <%= link_to(t('.edit'), edit_project_path(@project), class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
</div>

<div class="card mb-3 bg-dark text-light">
  <div class="card-header h3">
    <%= icon('fas','desktop', 'Tarefas', class: 'fa-fw h2 mb-0') %>
    <%= link_to('Nova Tarefa', new_project_task_path(@project), class: "btn btn-success float-right") %>
  </div>
  <div class="card-body">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th>
            Nome
          </th>
          <th>
            Responsável
          </th>
          <th>
            Inicio Previsto
          </th>
          <th>
            Fim Previsto
          </th>
          <th>
            Descrição
          </th>
          <th>
            Ações
          </th>
        </tr>
      </thead>
      <tbody>
        <% @project.tasks.each do |task| %>
          <tr>
            <td>
              <%= task.name %>
            </td>
            <td>
              <%= image_tag(task.user.image, class: "avatar-image avatar-image-list") %>
              <%= task.user.name %>
            </td>
            <td>
              <%= task.goals_start_at.present? ? I18n.l(task.goals_start_at, format: :long) : "" %>
            </td>
            <td>
              <%= task.goals_end_at.present? ? I18n.l(task.goals_end_at, format: :long) : "" %>
            </td>
            <td>
              <%= task.short_detailing %>
            </td>
            <td class="d-flex justify-content-center">
              <%= link_to(icon('far','eye'), project_task_path(id: task, project_id: task.project.id)) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $( "#project_owner" ).select2({
    theme: "bootstrap",
    language: "zh-TW"
  });

  $( "#project_user_ids" ).select2({
    theme: "bootstrap",
    language: "zh-TW"
  });
</script>
